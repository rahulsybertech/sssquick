<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PagerIndicator">
        <attr name="selectedColor" format="color" />
        <attr name="unselectedColor" format="color" />
        <attr name="selectedSize" format="dimension" />
        <attr name="rectHeight" format="dimension" />
        <attr name="unselectedSize" format="dimension" />
        <attr name="margin_between" format="dimension" />
        <attr name="isRectShape" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AppToolbar">
        <attr name="navigationType" format="enum">
            <enum name="menu" value="0" />
            <enum name="back" value="1" />
        </attr>
        <attr name="hideNavigation" format="boolean" />
        <attr name="titleType" format="enum">
            <enum name="title" value="0" />
            <enum name="logo" value="1" />
        </attr>
        <attr name="title" format="string|reference" />
        <attr name="isNotificationVisible" format="boolean" />
        <attr name="isLocationVisible" format="boolean" />
        <attr name="isCartVisible" format="boolean" />
        <attr name="isLogoutVisible" format="boolean" />
        <attr name="cartCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="MaterialSpinner">
        <attr name="emptyText" format="reference|string" />
    </declare-styleable>
</resources>