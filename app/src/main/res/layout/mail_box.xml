<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingHorizontal="16dp">



    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_medium"
        android:text="@string/sale_bill_no_format"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/mailDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sale BIll No. 121/21/DGHGD/116" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mailDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_medium"
        android:text="@string/sale_bill_no_format"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sale BIll No. 121/21/DGHGD/116" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/orderNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_medium"
        android:text="@string/sale_bill_no_format"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/mailDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailDate"
        tools:text="Sale BIll No. 121/21/DGHGD/116" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/purchaseBillNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_medium"
        android:textStyle="bold"
        android:text="@string/sale_bill_no_format"
        android:clickable="true"
        android:focusable="true"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailDate"
        tools:text="Sale Bill No. 121/21/DGHGD/116" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSaleBillNo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_medium"
        android:text="@string/sale_bill_no_format"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderNo"
        tools:text="Sale BIll No. 121/21/DGHGD/116" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSaleParty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_light"
        android:text="@string/sale_party_format"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSaleBillNo"
        tools:text="Sale Party | OMM HOSIERY : MUZAFFARPUR" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvSupplier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_light"
        android:text="@string/supplier_format"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSaleParty"
        tools:text="Supplier | DHARMENDRA TEXTILE GANDHI NAGAR" />
    <androidx.appcompat.widget.AppCompatImageView
        android:visibility="gone"
        android:id="@+id/pdf"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_pdf"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSaleParty"
        tools:text="Sale BIll No. 121/21/DGHGD/116" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_light"
        android:text="@string/supplier_format"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSupplier"
        tools:text="Supplier | DHARMENDRA TEXTILE GANDHI NAGAR" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/gray_200_bg"
        android:fontFamily="@font/noto_sans_regular"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSupplier"
        tools:text="Jeans" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/grey_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remark" />

</androidx.constraintlayout.widget.ConstraintLayout>
