<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingTop="7dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lvlItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:fontFamily="@font/noto_sans_light"
        android:text="Item Name"
        android:textSize="12sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toStartOf="@+id/lvlAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lvlAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:fontFamily="@font/noto_sans_light"
        android:text="@string/amount"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/lvlQuantity"
        app:layout_constraintStart_toEndOf="@+id/lvlItemName"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/lvlQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:fontFamily="@font/noto_sans_light"
        android:text="@string/quantity"
        android:textSize="12sp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lvlAmount"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_light"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="T1"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toStartOf="@id/tvAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lvlItemName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_light"
        tools:text="150000"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toStartOf="@id/tvQuantity"
        app:layout_constraintStart_toEndOf="@+id/tvItemName"
        app:layout_constraintTop_toBottomOf="@id/lvlAmount" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_light"
        tools:text="10"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textAlignment="textEnd"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvAmount"
        app:layout_constraintTop_toBottomOf="@id/lvlQuantity" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/cardBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="5dp"
        app:constraint_referenced_ids="tvItemName,tvAmount,tvQuantity" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/cardBarrier"
        android:background="@color/grey_300"/>
</androidx.constraintlayout.widget.ConstraintLayout>