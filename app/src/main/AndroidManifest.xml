<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_DOCUMENTS" />
    <!--<uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"-->
    <!--    tools:ignore="ScopedStorage" />-->

    <application
        android:name="com.ssspvtltd.quick.application.MainApplication"
        android:allowBackup="true"

        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.SSSQUICK"
        tools:targetApi="31">

        <activity
            android:name="com.ssspvtltd.quick.ui.order.stockinoffice.activity.StockInOfficeActivity"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true" />
        <activity
            android:name="com.ssspvtltd.quick.ui.order.add.activity.AddImageActivity"
            android:exported="false" />
        <activity
            android:name="com.ssspvtltd.quick.ui.order.add.activity.AddItemActivity"
            android:exported="false" />
        <activity
            android:name="com.ssspvtltd.quick.ui.order.pendinglr.activity.PendingLrActivity"
            android:exported="false" />
        <activity
            android:name="com.ssspvtltd.quick.ui.order.goodsreturn.activity.GoodsReturnActivity"
            android:exported="false" />
        <activity
            android:name="com.ssspvtltd.quick.ui.order.goodsreturn.activity.GoodReturnSecondaryActivity"
            android:exported="false" />
        <activity
            android:name="com.ssspvtltd.quick.ui.create_gr.CreateGRActivity"
            android:exported="false" />
        <activity
            android:name="com.ssspvtltd.quick.ui.checkincheckout.activity.CheckInCheckOutActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ui.PendingOrderByCustomerActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name=".ui.AddOrderActctivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"/>
        <activity
            android:name="com.ssspvtltd.quick.ui.auth.activity.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.ssspvtltd.quick.ui.main.MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:exported="true"
           />
        <activity
            android:name="com.ssspvtltd.quick.ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Alias with First Icon (Initially Disabled) -->
        <activity-alias
            android:name=".IconOneAlias"
            android:exported="true"
            android:targetActivity=".ui.auth.activity.LoginActivity"
            android:icon="@drawable/hold_pending_pdf_refresh"
            android:enabled="false">
        </activity-alias>

        <!-- Alias with Second Icon (Initially Disabled) -->
        <activity-alias
            android:name=".IconTwoAlias"
            android:exported="true"
            android:targetActivity=".ui.auth.activity.LoginActivity"
            android:icon="@drawable/share"
            android:enabled="false">
        </activity-alias>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.ssspvtltd.quick.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>